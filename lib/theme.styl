// Bespoke Classes: https://github.com/markdalgleish/bespoke-classes
// Stylus: http://learnboost.github.io/stylus

@import 'normalizecss/normalize.css'
@import './fonts.css'

$accent = #FFC107
$background = #222222
$color = #ffffff
$title = 'Patua One', serif
$text = 'Ubuntu', sans-serif

.bespoke-parent
  text-size-adjust: auto
  background: $background
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden
  transition: background 1s ease
  background-position: 50% 50%

.bespoke-scale-parent
  font-family: 'Ubuntu', sans-serif
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  pointer-events: none
  color: $color
  z-index: 2
  .bespoke-active
    pointer-events: auto
  a
    color: $accent
    text-decoration: none
  h1, h2, h3, h4
    font-family: $title
    text-shadow: 0 .25rem .25rem rgba(0, 0, 0, 0.5)
  pre
    background: $color
    color: $background
    padding: .7rem 1rem
    border-radius: .3rem
    box-shadow: 0 0 1rem rgba(0,0,0,.5)
    border: none
  ul 
    li
      line-height 1.8rem

.bespoke-slide
  transition: opacity .5s ease
  width: 940px
  height: 480px
  position: absolute
  top: 50%
  left: 50%
  margin-left: -(@width / 2)
  margin-top: -(@height / 2)
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  z-index: 1

.bespoke-active
  transition-delay: .25s
  //z-index: 1
  &[data-bespoke-backdrop]
    transition-delay: .25s

.bespoke-inactive
  opacity: 0
  pointer-events: none

.bespoke-bullet
  transition: opacity 250ms ease

.bespoke-bullet-inactive
  opacity: 0
  pointer-events: none

.bespoke-backdrop
  opacity: 0
  transition: opacity 1s ease, transform 16s linear
  background-size: cover
  background-position: 50% 50%
  transform: translateZ(0) scale(1.3)
  &-active,
  &-before
    transform: translateZ(0)
  &-before
    transition-delay: 1s
  &-active
    opacity: 0.5
  h1, h2, h3
    text-shadow: 0 .25rem .25rem rgba(0, 0, 0, 1)

.bespoke-progress-parent
  position: absolute
  bottom: 0
  left: 0
  right: 0
  height: .2rem
  z-index: 1

.bespoke-progress-bar
  height: 100%
  position: absolute
  bottom: 0
  left: 0
  background: $accent
  transition: width 1s ease

.bespoke-bullet
  transition: opacity 500ms ease
  &-active
    opacity: 1

.bespoke-bullet-inactive
  opacity: 0

.bespoke-backdrop
  opacity: 0
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  transition: opacity 1s ease, transform 6s ease
  background-size: cover
  background-position: 50% 50%
  transform: translateZ(0) scale(1.3)
  &-active,
  &-before
    transform: translateZ(0) scale(1)
  &-before
    transition-delay: .2s
  &-active
    opacity: 1

.emphatic
  background: $color

.emphatic-text
  color: $background
  h1, h2, h3, h4
    color: $background
    text-shadow: 0 .25rem .25rem rgba(0, 0, 0, 0.25)
