// Bespoke Classes: https://github.com/markdalgleish/bespoke-classes
// Stylus: http://learnboost.github.io/stylus

@import 'normalizecss/normalize.css'
@import 'prismjs/themes/prism-okaidia.css'

$accent = #FFC107
$background = darken(#263238, 5)
$color = #ffffff
$title  = 'Maven Pro', sans-serif
$text = 'Maven Pro', sans-serif
$size = 3.2rem

.bespoke-parent
  text-size-adjust: auto
  background: $background
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden
  transition: background 1s ease
  background-position: 50% 50%
  font-size: 1.25rem

.bespoke-scale-parent
  font-family: $text
  font-weight 400
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  pointer-events: none
  color: $color
  z-index: 2
  .bespoke-active
    pointer-events: auto
  a
    color: $accent
    text-decoration: none
  h1, h2, h3, h4, h5, h6
    transition: color 1s ease
    font-family: $title
    font-weight 700
    text-shadow: 0 .25rem .25rem rgba(0, 0, 0, 0.5)
  h1 
    font-size: $size
  h2
    font-size: $size - ($size/4)
  h3
    font-size: $size - ($size/3)
  pre
    background: rgba(#000, .1)
    border: none
  ul, ol
    li
      line-height 1.8rem
  p 
    transition: color 1s ease
    line-height: 1.8rem
    &.center
      text-align: center
    &.left
      text-align: left
    &.right
      text-align: right
    &.justify
      text-align: justify;
      text-justify: inter-word;

.bespoke-slide
  transition: opacity .5s ease
  width: 620px
  height: 460px
  position: absolute
  top: 50%
  left: 50%
  margin-left: -(@width / 2)
  margin-top: -(@height / 2)
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  z-index: 1

.bespoke-active
  transition-delay: .25s
  &[data-bespoke-backdrop]
    transition-delay: .25s

.bespoke-inactive
  opacity: 0
  pointer-events: none

.bespoke-bullet
  transition: opacity 250ms ease

.bespoke-bullet-inactive
  opacity: 0
  pointer-events: none

.bespoke-backdrop
  opacity: 0
  transition: opacity 1s ease, transform 16s linear
  background-repeat: no-repeat
  background-size: cover
  background-position: 50% 50%
  transform: translateZ(0) scale(1.3)
  &-active,
  &-before
    transform: translateZ(0)
  &-before
    transition-delay: 1s
  &-active
    opacity: 0.5
  h1, h2, h3
    text-shadow: 0 .25rem .25rem rgba(0, 0, 0, 1)

.bespoke-progress-parent
  position: absolute
  bottom: 0
  left: 0
  right: 0
  height: .2rem
  z-index: 1

.bespoke-progress-bar
  height: 100%
  position: absolute
  bottom: 0
  left: 0
  background: $accent
  transition: width 1s ease

.bespoke-bullet
  transition: opacity 500ms ease
  &-active
    opacity: 1

.bespoke-bullet-inactive
  opacity: 0

.bespoke-backdrop
  opacity: 0
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  transition: opacity 1s ease, transform 6s ease
  background-size: cover
  background-position: 50% 50%
  transform: translateZ(0) scale(1.3)
  &-active,
  &-before
    transform: translateZ(0) scale(1)
  &-before
    transition-delay: .2s
  &-active
    opacity: 1

.emphatic-text
  h1, h2, h3, h4, h5, h6
    text-shadow: 0 .25rem .25rem rgba(0, 0, 0, 0.25)

.light
  color: $background
  h1, h2, h3, h4, h5, h6, p
    color: $background
    text-shadow: 0 .25rem .25rem rgba(0, 0, 0, 0.15)

.green
  background: #388E3C

.orange
  background: #FFC107

.red
  background: #F44336

.blue
  background: #1976D2

.bespoke-blackout .bespoke-blackout-overlay
  transition: opacity 0.5s ease-in

.bespoke-blackout-overlay
  transition: opacity 0.5s ease-in, visibility 0s linear 0.5s
